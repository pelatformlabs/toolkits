{
  "name": "root",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clean": "turbo run clean",
    "clean:all": "turbo run clean:all && rm -rf .husky .turbo bun.lock coverage node_modules",
    "prepare": "husky",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "biome check && turbo run lint",
    "lint:fix": "biome check --write --unsafe && turbo run lint -- --fix",
    "format": "biome format --write",
    "format:check": "biome check --write",
    "types:check": "turbo run types:check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "version": "changeset version && bun update",
    "release": "bash ./scripts/publish.sh"
  },
  "keywords": [],
  "author": "Lukman Aviccena <lukman@pelatform.com>",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.4.2",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@commitlint/config-conventional": "^20.4.1",
    "@pelatform/biome-config": "workspace:*",
    "@types/bun": "^1.3.9",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "commitlint-plugin-function-rules": "^4.3.1",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.3",
    "turbo": "2.8.10",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "workspaces": [
    "packages/**",
    "apps/**"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}": "biome check --write --no-errors-on-unmatched",
    "*.{md,yml,yaml}": "prettier --write",
    "*.{json,jsonc,html}": "biome format --write --no-errors-on-unmatched"
  },
  "engines": {
    "node": ">=22",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.3.9"
}
