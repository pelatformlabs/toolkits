{
  "name": "@pelatform/eslint-config-vite",
  "version": "0.1.2",
  "description": "ESLint configuration for Vite projects with React Refresh support.",
  "author": "Pelatform",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "tsc -b --clean && rimraf dist",
    "clean:all": "rimraf .turbo dist node_modules",
    "build": "tsc"
  },
  "repository": "github:pelatformlabs/toolkits",
  "homepage": "https://github.com/pelatformlabs/toolkits",
  "bugs": {
    "url": "https://github.com/pelatformlabs/toolkits/issues"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "pelatform",
    "eslint",
    "eslintconfig",
    "configuration",
    "config",
    "vite",
    "react-refresh",
    "typescript",
    "linting",
    "code-style"
  ],
  "dependencies": {
    "@pelatform/eslint-config-react": "workspace:^",
    "@tanstack/eslint-plugin-router": "^1.141.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "typescript-eslint": "^8.53.0"
  },
  "devDependencies": {
    "@pelatform/eslint-config": "workspace:^",
    "@pelatform/tsconfig": "workspace:^",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "eslint": ">=9.30.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}": "biome check --write --no-errors-on-unmatched",
    "*.{md,yml,yaml}": "prettier --write",
    "*.{json,jsonc,html}": "biome format --write --no-errors-on-unmatched"
  }
}
