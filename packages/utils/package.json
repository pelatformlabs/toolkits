{
  "name": "@pelatform/utils",
  "version": "1.0.8",
  "description": "A comprehensive library of utility functions for building modern SaaS applications.",
  "author": "Pelatform",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "default": "./dist/server.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "clean:all": "rimraf .turbo coverage dist node_modules",
    "dev": "tsup --watch",
    "build": "tsup",
    "types:check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "repository": "github:pelatformlabs/toolkits",
  "homepage": "https://github.com/pelatformlabs/toolkits",
  "bugs": {
    "url": "https://github.com/pelatformlabs/toolkits/issues"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "pelatform",
    "utils"
  ],
  "dependencies": {
    "@paralleldrive/cuid2": "^3.1.0",
    "@sindresorhus/slugify": "^3.0.0",
    "bcryptjs": "^3.0.3",
    "chrono-node": "2.9.0",
    "clsx": "^2.1.1",
    "consola": "^3.4.2",
    "jsonwebtoken": "^9.0.3",
    "ms": "^2.1.3",
    "nanoid": "^5.1.6",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@pelatform/tsconfig": "workspace:*",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/ms": "^2.1.0",
    "@types/node": "^25.0.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}": "biome check --write --no-errors-on-unmatched",
    "*.{md,yml,yaml}": "prettier --write",
    "*.{json,jsonc,html}": "biome format --write --no-errors-on-unmatched"
  }
}
