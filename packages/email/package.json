{
  "name": "@pelatform/email",
  "version": "1.0.11",
  "description": "Email templates and sending utilities for SaaS applications.",
  "author": "Pelatform",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components.d.ts",
      "default": "./dist/components.js"
    },
    "./helpers": {
      "types": "./dist/helpers.d.ts",
      "default": "./dist/helpers.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "clean:all": "rimraf .turbo coverage dist node_modules",
    "dev": "tsup --watch",
    "build": "tsup",
    "types:check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "repository": "github:pelatformlabs/toolkits",
  "homepage": "https://github.com/pelatformlabs/toolkits",
  "bugs": {
    "url": "https://github.com/pelatformlabs/toolkits/issues"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "pelatform",
    "email",
    "smtp",
    "nodemailer",
    "resend"
  ],
  "dependencies": {
    "@react-email/components": "^1.0.6",
    "nodemailer": "^7.0.12",
    "resend": "^6.8.0"
  },
  "devDependencies": {
    "@pelatform/tsconfig": "workspace:*",
    "@types/node": "^25.0.10",
    "@types/nodemailer": "^7.0.5",
    "@types/react": "^19.2.9",
    "react": "^19.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0 || >=19.0.0-rc.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cjs,mjs,cts,mts}": "biome check --write --no-errors-on-unmatched",
    "*.{md,yml,yaml}": "prettier --write",
    "*.{json,jsonc,html}": "biome format --write --no-errors-on-unmatched"
  }
}
